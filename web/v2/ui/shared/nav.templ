package shared

templ Nav() {
	<nav hx-boost="true" class="sticky top-0 flex w-full items-center justify-between bg-sky-700 px-4 py-2 text-white md:px-8">
		<h1 class="text-lg">
			<a href="/" hx-indicator="#global-indicator">
				Nota Fiscal Fácil
			</a>
		</h1>
		<div class="flex items-center gap-4 sm:gap-6 xl:gap-8">
			<ul hx-boost="true" class="hidden gap-2 xl:flex">
				@MenuItem("/entities") {
					@IconSm("user")
					<span>Entidades</span>
				}
				@MenuItem("/invoices") {
					@IconSm("file-text")
					<span>Notas Fiscais</span>
				}
				@MenuItem("/metrics") {
					@IconSm("activity")
					<span>Métricas</span>
				}
				@MenuItem("/logout") {
					@IconSm("log-out")
					<span>Sair</span>
				}
			</ul>
			<button class="rounded-full transition hover:bg-sky-800 xl:p-2">
				@IconSm("bell")
			</button>
			<button class="xl:hidden">
				@Icon("menu")
			</button>
		</div>
	</nav>
}

templ MenuItem(url string) {
	<a href={ templ.SafeURL(url) }>
		<li class="flex h-full w-full flex-1 transform cursor-pointer items-center justify-center gap-2 rounded px-2 py-1 transition hover:bg-sky-800 active:scale-95">
			{ children... }
		</li>
	</a>
}
